#tar -zxvf rpm_files.tar.gz
#install pexpect
rpm -qa | grep -i pexpect
if [ "$?" == 0 ] ;then
  echo ">>The system has been installed pexpect skip!"
else
  echo "install pexpect"
  yum -y install rpm_files/pexpect-2.3-11.el7.noarch.rpm
fi
